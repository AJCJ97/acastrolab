---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import DarkModeToggle from './DarkModeToggle.astro';
---

<header>
	<nav>
		<HeaderLink translate="no" href="/" class="site-title-link"><img src="/src/assets/logo.png" alt="" class="logo-img"/></HeaderLink>
		
		<div class="social-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/projects/">Projects</HeaderLink>
			<HeaderLink href="/about/">About</HeaderLink>
			<HeaderLink href="/contact/">Contact</HeaderLink>
			<DarkModeToggle />
		</div>
		
		<button id="menuToggle" class="menu-btn">☰</button>
	</nav>

	<div id="mobileMenu" class="mobile-menu" style="display:none;">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/projects/">Projects</HeaderLink>
		<HeaderLink href="/about/">About</HeaderLink>
		<HeaderLink href="/contact/">Contact</HeaderLink>
		<DarkModeToggle />
	</div>
</header>

<script>
const btn = document.getElementById("menuToggle");
const menu = document.getElementById("mobileMenu");

btn.addEventListener("click", () => {
    // Alterna entre 'none' (oculto) y 'flex' (visible)
    menu.style.display = menu.style.display === "none" || menu.style.display === "" ? "flex" : "none";
});
</script>

<style>
	.logo-img {
        height: 135px; 
        width: auto;
        display: block; 
    }
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--color-block-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		font-weight: bold;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	/* ESTILOS DE ESCRITORIO POR DEFECTO */
	.social-links,
	.social-links a {
		display: flex; /* Tabs visibles en escritorio */
	}

	.menu-btn {
		display: none; /* Botón oculto en escritorio */
	}
	
	.mobile-menu {
		flex-direction: column;
		width: 100%;
		position: absolute; /* Para que quede debajo del nav */
		background: var(--color-block-bg);
		z-index: 10;
		padding: 1em 0;
		border-top: 1px solid rgba(var(--black), 0.1);
	}
	.mobile-menu a {
		padding: 0.5em 1em;
		text-decoration: none;
		font-weight: bold;
		color: var(--black);
	}
	

	/* Estilos generales de enlaces */
	nav a {
		padding-left: 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none !important;
		font-weight: bold;
	}
	nav a.active {
		border-bottom-color: var(--accent) !important;
		font-weight: bold;
	}
	.site-title-link {
		border-bottom: 0 !important;
	}
	
	@media (max-width: 720px) {
		/* 1. VISIBILIDAD */
		.social-links {
			display: none; /* Oculta los tabs de escritorio en móvil */
		}
		.menu-btn {
			display: block; /* Muestra el botón de menú en móvil */
			font-size: 1.5em;
			background: none;
			border: none;
			cursor: pointer;
			color: var(--black);
		}
		
		/* 2. AJUSTES DE DISEÑO PARA MÓVIL */
		header {
			padding: 0 0.5em;
			box-shadow: none;
		}

		nav {
			width: 90%;
			align-items: center; /* Alinea los elementos verticalmente */
		}
		
		h2 {
			margin-right: 0.5em;
			font-size: 1em; /* Ajustamos el tamaño del título */
		}
		
		/* Puedes simplificar o eliminar las siguientes reglas si ya no son necesarias */
		nav a {
			padding: 1em 0.3em;
			border-bottom-width: 2px;
			font-size: 0.9em;
			justify-content: center;
			line-height: 2em;
			vertical-align: middle;
		}
		a:-webkit-any-link {
		text-decoration: none !important;
		}
	}
</style>
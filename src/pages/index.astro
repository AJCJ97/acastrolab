---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>AC.Analytics | Data Analyst Portfolio</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Hi, I'm Alberto — Data Analyst</h1>
				<p>
					I’m a Data Analyst with a Software Engineering background and 5+ years of experience working with 
					cross-functional teams across the U.S. and the U.K. I specialize in SQL, Python, Power BI, and Excel, 
					transforming raw information into insights that support business decisions.
				</p>

				<div class="cta-buttons">
					<a href="about/" class="primary-btn">About Me</a>
					<a href="Data_Analyst_Alberto_Castro_Jimenez.pdf" class="secondary-btn">Download CV</a>
				</div>
			</section>

			<section class="projects-section">
				<h2>Featured Projects</h2>

				<div class="project-grid">
					<div class="project-card">
						<h3>Gym Admin Database</h3>
						<p>SQL relational database for multi-location gym operations. Includes schema design, relationships, and queries.</p>
						<a href="https://gitlab.com/acastro97/gym_bd_admin" target="_blank">View Project →</a>
					</div>

					<div class="project-card">
						<h3>Python Database Generator</h3>
						<p>CSV-to-database generator using Python, pandas, faker and randomization for synthetic datasets.</p>
						<a href="https://gitlab.com/acastro97/random_users_list_generator" target="_blank">View Project →</a>
					</div>
				</div>
			</section>

			<section class="projects-section">
				<h2>Featured Projects</h2>

				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>



---
import Layout from '../../layouts/BlogPost.astro';
import ProjectCard from '../../components/ProjectCard.jsx';// Importa el componente React

// Datos de ejemplo para tus proyectos de Data Analyst
const projects = [
    { 
        id: 1, 
        title: "Análisis de Propensión de Clientes", 
        description: "Desarrollo de un modelo de clasificación con Python (Scikit-learn) para predecir qué clientes tienen mayor probabilidad de *churn*. El proyecto incluye limpieza de datos, selección de características y evaluación del modelo.", 
        tools: ["Python", "Pandas", "Scikit-learn", "Jupyter"], 
        link: "https://github.com/ajcj97/project-churn" 
    },
    { 
        id: 2, 
        title: "Dashboard de Rendimiento de Ventas", 
        description: "Creación de un dashboard interactivo en Power BI para monitorear KPIs de ventas en tiempo real, permitiendo a los gerentes identificar cuellos de botella geográficos y por producto.", 
        tools: ["Power BI", "SQL", "DAX"], 
        link: "https://lookerstudio.google.com/embed/dashboard-sales-example" 
    },
    { 
        id: 3, 
        title: "Automatización ETL con SQL y Python", 
        description: "Diseño y ejecución de un pipeline ETL (Extract, Transform, Load) para migrar datos de sistemas legados a un Data Warehouse. El script de transformación se ejecuta diariamente mediante un cron job.", 
        tools: ["SQL", "Python", "Airflow (conceptos)"], 
        link: "https://github.com/ajcj97/etl-pipeline-example" 
    },
];
---

<Layout title="Proyectos">
    <h2 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-10 text-center">
        Portafolio de Proyectos
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
            // Usamos el componente React. El atributo client:load 
            // lo hace interactivo si tuviera lógica (aunque esta versión es estática).
            <ProjectCard 
                title={project.title} 
                description={project.description} 
                tools={project.tools} 
                link={project.link}
                // client:load - Indica a Astro que cargue y active el JS de React
                // Si no tiene JS interactivo, puedes quitarlo para mayor rendimiento.
                client:load 
            />
        ))}
    </div>
</Layout>